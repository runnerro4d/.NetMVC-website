@{
    ViewBag.Title = "Home Page";
}


    <div id="imageCarousel" class="carousel slide" data-interval="3000"
         data-ride="carousel" data-pause="hover" data-wrap="true">

        <ol class="carousel-indicators">
            <li data-target="#imageCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#imageCarousel" data-slide-to="1"></li>
            <li data-target="#imageCarousel" data-slide-to="2"></li>
        </ol>

        <div class="carousel-inner">
            <div class="item active">
                <img src="~/Images/websitePic.jpg" class="img-responsive">
                <div class="carousel-caption">
                    <h3></h3>
                    <p style="font-weight: bold; color:white;font-size:medium">JoeStar City Lights</p>
                </div>
            </div>
            <div class="item">
                <img src="~/Images/websitePic2.jpg" class="img-responsive">
                <div class="carousel-caption">
                    <h3></h3>
                    <p style="font-weight: bold; color:white;font-size:medium">JoeStar River View</p>
                </div>
            </div>
            <div class="item">
                <img src="~/Images/websitePic3.jpg" class="img-responsive">
                <div class="carousel-caption">
                    <h3></h3>
                    <p style="font-weight: bold; color:white;font-size:medium">JoeStar Sea View</p>
                </div>
            </div>

        </div>

        @*<a href="#imageCarousel" class="carousel-control left" data-slide="prev">
            <span class="glyphicon glyphicon-hand-left"></span>
        </a>
        <a href="#imageCarousel" class="carousel-control right" data-slide="next">
            <span class="glyphicon glyphicon-hand-right"></span>
        </a>*@

        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
        </a>
    </div>


<div class="row">
    <div class="col-md-4">
        <h2>View The Best Hotels</h2>
        <p>Whether you love the view of the sea or the view from the city skyscrapers, we at JoeStar hotels have you covered. 
        </p>
        <div class="btn btn-default">@Html.ActionLink("Hotels", "Index", "hotels")</div>
    </div>
    <div class="col-md-4">
        <h2>Have A Comfortable Stay</h2>
        <p>Want to forget all your worries and just relax? JoeStar Hotels' staff and rooms make sure we worry about the basics, so that you don't have to.</p>
        <div class="btn btn-default">@Html.ActionLink("Rooms", "Index", "rooms")</div>
    </div>
    <div class="col-md-4">
        <h2>Not a member yet?</h2>
        <p>What are you waiting for? Take some time off and enjoy the vibes of Melbourne.</p>
        <div class="btn btn-default">@Html.ActionLink("Register", "Register", "Account")</div>
    </div>

</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

@Scripts.Render("~/bundles/bootstrap")
